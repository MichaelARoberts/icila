extends ../layout

block content
  div(ng-app='eventApp' ng-controller='createEventCtrl')
    div.container
      div.col-md-6
        img(ng-src="{{imageSrc}}" style="max-width: 100%")
        
      div.col-md-6
        h3(style="text-align:center;") Upload an Image
        form
          div.form-group
            label.file(style="width:100%;")
              input(type="file" ng-file-select="onFileSelect($file)")
              span.file-custom
          div.form-group
            label Title
            input(ng-model="imageTitle").form-control
          div.form-group
            label Caption
            input(ng-model="imageTitle").form-control
          div.form-group
            label ZIP
            input(ng-model="imageTitle" type="Number").form-control
